.message{
  display: flex;
  margin: 10px auto;
  font-weight: bold;
  align-items: center;
  justify-content: center;
}

.weui-cells{
  width: 90%;
  margin: 0 auto;
  border-radius: 5px;
  border: 1px solid #f5f5f5;
  background-color: #f5f5f5;
}
.weui-cell{
  padding: 13px;
}
.weui-textarea-counter{
  color: var(--weui-FG-2);
  text-align: right;
  font-size: 14px;
}
.weui-textarea {
  display: block;
  border: 0;
  resize: none;
  background: transparent;
  width: 100%;
  color: inherit;
  font-size: 1em;
  line-height: inherit;
  outline: 0;
}
