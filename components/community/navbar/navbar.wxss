/* pages/community/community.wxss */
.nav{
    width: 100%;
    text-align: center;
    line-height: 80rpx;
    display: flex;
    border-bottom: 24rpx solid #F5F5F5;
    padding-bottom: 20rpx;
  }
.nav-tab{  
    font-size: 36rpx;
    display: inline-block;
    flex: 1;
    color: #AFAFAF;
    cursor: pointer;
}
.on{ color: #353535;
  position: relative;
}
.on::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 60rpx;
  border-top: 8rpx solid #AB956D;
  margin: 0 auto;
}